<div class="row">

  <div class='col-md-5'>
    <p class="lead">Register to receive random acts of coffee</p>
    <hr />
    <%= form_for(@user) do |f| %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3>Uh oh&hellip; <%= pluralize(@user.errors.count, "problems") %> need your attention.</h3>
          <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
        <hr />
      <% end %>
      <div class='form-group'>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>

      <div class='form-group'>
        <%= f.label :department_id %>
        <%= f.select :department_id, Department.all.map{|d| [d.name, d.id] }, { include_blank: true }, { class: 'form-control' } %>
      </div>

      <%= f.submit 'Add me', class: 'btn btn-info btn-lg' %>

    <% end %>

  </div>
</div>
